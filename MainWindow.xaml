<Window x:Class="ImportDataToDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImportDataToDB"
        mc:Ignorable="d"
        Title="Import Data to Database Application" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cbYear" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="400" Height="30"/>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Margin="200,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Height="30" FontSize="15" IsReadOnly="True"/>
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="525,135,0,0" VerticalAlignment="Top" Height="30" Width="75" FontSize="15" FontWeight="Bold" Click="btnBrowse_Click"/>
        <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="250,217,0,0" VerticalAlignment="Top" Width="75" Height="30" FontSize="15" FontWeight="Bold" Click="btnImport_Click"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="475,217,0,0" VerticalAlignment="Top" Height="30" Width="75" FontSize="15" FontWeight="Bold" Click="btnClear_Click"/>

    </Grid>
</Window>
